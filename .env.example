# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
STRIPE_PUBLIC_KEY=pk_test_your_publishable_key_here

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Mailchimp Configuration
# Get your API key from: https://us1.admin.mailchimp.com/account/api/
# List ID is found in your Audience dashboard
# Server prefix is part of your API key (e.g., us1, us2, etc.)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_audience_id_here
MAILCHIMP_SERVER_PREFIX=us1

# Database (if using external database)
DATABASE_URL=your_database_connection_string_here

# Authentication
JWT_SECRET=your_jwt_secret_for_session_management_here

# Image Optimization (if using cloud service like Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Application Configuration
APP_URL=http://localhost:3000

# Checkout Configuration
# Allow users to persist their data (create accounts, save addresses)
NUXT_CAN_PERSIST=false

# Allow multiple payment methods (online + manual)
NUXT_MULTIPLE_PAYMENT_METHODS=true

# reCAPTCHA Configuration (v3)
# Get your keys from: https://www.google.com/recaptcha/admin
# Create a new site and select reCAPTCHA v3
# Add your domain to the allowed domains list
NUXT_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
NUXT_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Email Configuration (SMTP)
NUXT_CONTACT_EMAIL=gombianholdings@gmail.com
NUXT_MAIL_SERVICE=gmail
NUXT_MAIL_HOST=smtp.gmail.com
NUXT_MAIL_PORT=587
NUXT_MAIL_USER=your_smtp_username_here
NUXT_MAIL_PASSWORD=your_smtp_password_here